<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diabledpeople"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bb_background"
    tools:context="com.example.mohamed.shhd.DisabledpeopleActivity">

    <Button
        android:id="@+id/Blind_people"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="Blind people"
        android:textSize="30dp"
        android:background="@drawable/button_m"
        android:textColor="#c4ddc5"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/Deaf_people"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Deaf_people"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="Deaf people"
        android:textSize="30dp"
        android:background="@drawable/button_m"
        android:textColor="#c4ddc5"
        android:layout_marginBottom="134dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Blind_people" />

</RelativeLayout>
