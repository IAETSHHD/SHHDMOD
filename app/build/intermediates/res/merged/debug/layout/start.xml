<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/drawerLayout"
    tools:context="com.example.mohamed.shhd.StartActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:id="@+id/start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bb_background"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Mission history"
        android:textSize="24dp"
        android:background="@drawable/button_m"
        android:textColor="#c4ddc5"
        android:id="@+id/Mission_history"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/Security"
        android:layout_alignLeft="@+id/Security"
        android:layout_alignStart="@+id/Security" />

    <Button
        android:id="@+id/Home_Handler"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Home handler"
        android:textSize="22dp"
        android:background="@drawable/button_m"
        android:textColor="#c4ddc5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="security"
        android:textSize="24dp"
        android:background="@drawable/button_m"
        android:textColor="#c4ddc5"
        android:id="@+id/Security"
        android:layout_below="@+id/Home_Handler"
        android:layout_alignLeft="@+id/Home_Handler"
        android:layout_alignStart="@+id/Home_Handler"
        android:layout_marginTop="26dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Chat"
        android:textSize="24dp"
        android:background="@drawable/button_m"
        android:textColor="#c4ddc5"
        android:id="@+id/Chat"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Mission_history"
        android:layout_alignLeft="@+id/Mission_history"
        android:layout_alignStart="@+id/Mission_history" />

    <TextView
        android:text="Log-Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#616861"
        android:id="@+id/buttonlogoout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
<android.support.design.widget.NavigationView
android:id="@+id/navigationview"
android:layout_height="match_parent"
android:layout_width="wrap_content"
app:headerLayout="@layout/showapps"
android:layout_gravity="start"
app:menu="@menu/navigation_menu">
</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>