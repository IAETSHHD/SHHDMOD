<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bb_background"
    android:visibility="visible">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lightcontrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/bb_background"
        tools:context="com.example.mohamed.shhd.lightcontrolActivity">

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s"
            android:textOff="@string/off"
            android:textOn="@string/On"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:singleLine="false"
            android:showText="true"
            android:switchMinWidth="120dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:layout_below="@+id/start_inv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Switch
            android:id="@+id/mySwitch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="120dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:text="@string/s1"
            android:textOff="@string/off"
            android:textOn="@string/On"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:showText="true"
            android:singleLine="true"
            android:layout_below="@+id/mySwitch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Switch
            android:id="@+id/mySwitch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="120dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:text="@string/s2"
            android:textOff="@string/off"
            android:textOn="@string/On"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:showText="true"
            android:layout_below="@+id/mySwitch1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Switch
            android:id="@+id/mySwitch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="120dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:text="@string/s3"
            android:textOff="@string/off"
            android:textOn="@string/On"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:showText="true"
            android:layout_below="@+id/mySwitch2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Switch
            android:id="@+id/mySwitch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="120dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:text="@string/s4"
            android:textOff="@string/off"
            android:textOn="@string/On"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:showText="true"
            android:layout_below="@+id/mySwitch3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Switch
            android:id="@+id/mySwitch5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="120dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:text="Room6"
            android:textOff="@string/off"
            android:textOn="@string/On"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:showText="true"
            android:layout_below="@+id/mySwitch4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:ems="10"
            android:id="@+id/timer"
            android:text="00:00:00"
            android:layout_alignParentTop="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:minWidth="20dp"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/start_inv"
            android:layout_toEndOf="@+id/start_inv" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textColor="#c4ddc5"
            android:background="@drawable/button_m"
            android:id="@+id/start_inv"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>
